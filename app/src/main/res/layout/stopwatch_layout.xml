<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:background="@color/darkBlue"
    android:layout_height="match_parent">

    <TextView android:id="@+id/timeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="55"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="bottom|center"
        android:layout_marginBottom="80dp"
        android:text="@string/start_timer_value" />

    <LinearLayout android:id="@+id/buttonsLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="40"
        android:layout_height="wrap_content">

        <ImageButton android:id="@+id/startButton"
            android:src="@drawable/play_button"
            android:contentDescription="@string/resetButton"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_marginStart="60dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <View android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <ImageButton android:id="@+id/resetButton"
            android:background="@null"
            android:contentDescription="@string/startButton"
            android:src="@drawable/reset_button"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </LinearLayout>
</LinearLayout>